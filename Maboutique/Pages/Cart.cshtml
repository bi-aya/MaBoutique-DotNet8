@page
@model Maboutique.Pages.CartModel
@{
    ViewData["Title"] = "Mon Panier";
}

<h2 class="mb-4"><i class="bi bi-cart3"></i> Votre Panier</h2>

@if (Model.CartItems.Count == 0)
{
    <div class="text-center py-5">
        <i class="bi bi-cart-x display-1 text-muted"></i>
        <h3 class="mt-3">Votre panier est vide</h3>
        <p class="text-muted">Il semble que vous n'ayez encore rien ajouté.</p>
        <a asp-page="Index" class="btn btn-primary mt-3">Commencer mes achats</a>
    </div>
}
else
{
    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Produit</th>
                                    <th class="text-center">Quantité</th>
                                    <th class="text-end pe-4">Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CartItems)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <a asp-page="Details" asp-route-id="@item.Produit.Id">
                                                    <img src="@(string.IsNullOrEmpty(item.Produit.ImageUrl) ? "https://placehold.co/50x75" : item.Produit.ImageUrl)"
                                                         class="rounded shadow-sm me-3"
                                                         style="width: 50px; height: 75px; object-fit: cover;"
                                                         alt="@item.Produit.Nom">
                                                </a>

                                                <div>
                                                    <h6 class="mb-0 fw-bold">
                                                        <a asp-page="Details" asp-route-id="@item.Produit.Id" class="text-decoration-none text-dark">
                                                            @item.Produit.Nom
                                                        </a>
                                                    </h6>
                                                    <small class="text-muted">PU : @item.Produit.Prix.ToString("C")</small>
                                                </div>
                                            </div>
                                        </td>

                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm border rounded" role="group">
                                                <form method="post" asp-page-handler="UpdateQuantity" asp-route-id="@item.Produit.Id" asp-route-change="-1" class="d-inline">
                                                    <button type="submit" class="btn btn-light text-dark border-0 px-2" @(item.Quantity <= 1 ? "disabled" : "")>
                                                        <i class="bi bi-dash"></i>
                                                    </button>
                                                </form>

                                                <span class="btn btn-light border-0 px-3 fw-bold disabled" style="opacity: 1; background: #fff;">
                                                    @item.Quantity
                                                </span>

                                                <form method="post" asp-page-handler="UpdateQuantity" asp-route-id="@item.Produit.Id" asp-route-change="1" class="d-inline">
                                                    <button type="submit" class="btn btn-light text-dark border-0 px-2">
                                                        <i class="bi bi-plus"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>

                                        <td class="text-end pe-4 fw-bold text-primary">
                                            @((item.Quantity * item.Produit.Prix).ToString("C"))
                                        </td>

                                        <td class="text-end pe-3">
                                            <form method="post" asp-page-handler="Remove" asp-route-id="@item.Produit.Id">
                                                <button class="btn btn-link text-danger p-0" title="Retirer du panier">
                                                    <i class="bi bi-trash fs-5"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <a asp-page="Index" class="text-decoration-none"><i class="bi bi-arrow-left"></i> Continuer vos achats</a>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white fw-bold py-3">Résumé de la commande</div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Sous-total</span>
                        <span>@Model.Total.ToString("C")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Livraison</span>
                        <span class="text-success">Gratuite</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-4">
                        <span class="h5">Total</span>
                        <span class="h5 fw-bold text-primary">@Model.Total.ToString("C")</span>
                    </div>

                    <button class="btn btn-primary w-100 py-2 rounded-3 shadow-sm">
                        Procéder au paiement <i class="bi bi-arrow-right"></i>
                    </button>

                    <div class="mt-3 text-center small text-muted">
                        <i class="bi bi-shield-lock"></i> Paiement 100% sécurisé
                    </div>
                </div>
            </div>
        </div>
    </div>
}