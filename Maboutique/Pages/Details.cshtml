@page "{id:int}"
@model Maboutique.Pages.DetailsModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = Model.Produit.Nom;
    // Astuce pour afficher les étoiles pleines/vides selon la moyenne
    int starsFull = (int)Math.Round(Model.NoteMoyenne);
}

<div class="container mt-4 mb-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb bg-transparent p-0">
            <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-muted">Accueil</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Produit.Nom</li>
        </ol>
    </nav>

    <div class="book-details-container">
        <div class="row g-0">
            <div class="col-md-5 col-lg-4 book-cover-large-container">
                <img src="@(string.IsNullOrEmpty(Model.Produit.ImageUrl) ? "https://placehold.co/300x450?text=Couverture" : Model.Produit.ImageUrl)"
                     class="book-cover-large img-fluid" alt="@Model.Produit.Nom">
            </div>

            <div class="col-md-7 col-lg-8 p-4 p-md-5 d-flex flex-column">
                <div class="mb-auto">
                    <span class="badge bg-secondary mb-2">@Model.Produit.Categorie?.Nom</span>
                    <h1 class="fw-bold text-dark mb-1">@Model.Produit.Nom</h1>

                    <div class="mb-3 text-warning">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <i class="bi @(i <= starsFull ? "bi-star-fill" : "bi-star")"></i>
                        }
                        <span class="text-muted ms-2 small">(@Model.NombreAvis avis)</span>
                    </div>

                    <div class="d-flex align-items-center gap-4 mb-4 p-3 bg-light rounded">
                        <span class="book-price-large">@Model.Produit.Prix.ToString("C")</span>
                        @if (TempData["SuccesAjout"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccesAjout"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <form method="post" asp-page-handler="AddToCart" asp-route-id="@Model.Produit.Id" class="flex-grow-1">

                            <div class="row g-2 align-items-center">
                                <div class="col-auto">
                                    <label class="visually-hidden" for="quantiteInput">Quantité</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-x"></i></span>
                                        <input type="number"
                                               id="quantiteInput"
                                               name="quantite"
                                               value="1"
                                               min="1"
                                               max="99"
                                               class="form-control border-start-0 text-center fw-bold"
                                               style="width: 80px;">
                                    </div>
                                </div>

                                <div class="col">
                                    <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold shadow-sm">
                                        <i class="bi bi-cart-plus me-2"></i> Ajouter
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>

                    <h5 class="fw-bold mt-4">Résumé</h5>
                    <p class="text-muted" style="line-height: 1.8;">@Model.Produit.Description</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-lg-8 mx-auto">
            <div class="bg-white p-4 rounded shadow-sm">
                <h4 class="fw-bold mb-4">Avis des lecteurs</h4>

                @if (!SignInManager.IsSignedIn(User))
                {
                    <div class="alert alert-info">
                        <a asp-area="Identity" asp-page="/Account/Login">Connectez-vous</a> pour donner votre avis sur ce livre.
                    </div>
                }
                else if (Model.ADejaVote)
                {
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle-fill"></i> Merci ! Vous avez déjà noté ce livre.
                    </div>
                }
                else
                {
                    <form method="post" asp-page-handler="SubmitReview" asp-route-id="@Model.Produit.Id" class="mb-4 p-4 border rounded bg-light">
                        <h6 class="fw-bold mb-3">Qu'avez-vous pensé de ce livre ?</h6>

                        <div class="d-flex align-items-center justify-content-between">
                            <div class="rate">
                                <input type="radio" id="star5" name="NouvelleNote" value="5" />
                                <label for="star5" title="text">5 stars</label>
                                <input type="radio" id="star4" name="NouvelleNote" value="4" />
                                <label for="star4" title="text">4 stars</label>
                                <input type="radio" id="star3" name="NouvelleNote" value="3" />
                                <label for="star3" title="text">3 stars</label>
                                <input type="radio" id="star2" name="NouvelleNote" value="2" />
                                <label for="star2" title="text">2 stars</label>
                                <input type="radio" id="star1" name="NouvelleNote" value="1" required />
                                <label for="star1" title="text">1 star</label>
                            </div>
                            <button type="submit" class="btn btn-dark px-4">Envoyer ma note</button>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>