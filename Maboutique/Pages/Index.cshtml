<div class="p-5 mb-4 text-white rounded-3 shadow" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container-fluid py-2">
        <h1 class="display-5 fw-bold"><i class="bi bi-robot"></i> Assistant Libraire IA</h1>
        <p class="fs-5">Une envie de lecture ? Demandez conseil à notre intelligence artificielle !</p>

        <form method="post" asp-page-handler="AskAi" class="mt-4">
            <div class="input-group input-group-lg">
                <input asp-for="QuestionUser" class="form-control border-0" placeholder="Ex: Je veux un livre policier avec du suspense..." />
                <button type="submit" class="btn btn-warning fw-bold text-dark">
                    <i class="bi bi-send-fill"></i> Demander
                </button>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(Model.ReponseIA))
        {
            <div id="zoneReponseIA" class="mt-4 position-relative bg-white text-dark rounded-3 shadow border-start border-5 border-warning animate__animated animate__fadeInUp">

                <button type="button" class="btn-close position-absolute top-0 end-0 m-3" aria-label="Close" onclick="fermerReponse()"></button>

                <div class="p-4">
                    <h5 class="fw-bold text-warning"><i class="bi bi-chat-quote-fill"></i> Le Conseil :</h5>
                    <p class="fs-5 mb-3">@Model.ReponseIA</p>

                    @if (Model.ProduitsSuggeres != null && Model.ProduitsSuggeres.Any())
                    {
                        <hr class="text-muted" />
                        <p class="small text-muted mb-2"><i class="bi bi-basket"></i> Ajouter rapidement au panier :</p>

                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var p in Model.ProduitsSuggeres)
                            {
                                <div class="d-flex align-items-center bg-light border rounded-pill pe-2 ps-3 py-1">
                                    <span class="fw-bold me-2 small">@p.Nom</span>
                                    <span class="text-success small me-2">@p.Prix DH</span>

                                    <form method="post" asp-page-handler="AddToCart" asp-route-id="@p.Id" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-dark rounded-circle" style="width: 30px; height: 30px; padding: 0;" title="Ajouter au panier">
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        }
        <script>
            function fermerReponse() {
                var zone = document.getElementById('zoneReponseIA');
                if (zone) {
                    // Animation de disparition douce
                    zone.style.transition = "opacity 0.5s ease";
                    zone.style.opacity = "0";
                    setTimeout(function() {
                        zone.style.display = "none";
                    }, 500);
                }
            }
        </script>
    </div>
</div>

<div class="container" id="rayons">

    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h3 class="fw-bold m-0"><i class="bi bi-book"></i> Nos Rayons</h3>

        <div class="d-flex gap-2 overflow-auto pb-2 hide-scrollbar" style="white-space: nowrap;">
            <a asp-page="./Index" asp-route-CategorieId=""
               class="btn rounded-pill px-4 @(Model.CategorieId == null ? "btn-dark" : "btn-outline-dark")">
                Tout
            </a>

            @if (Model.Produits != null && Model.Produits.Count > 0)
            {
                @foreach (var cat in Model.Categories)
                {
                    <a asp-page="./Index" asp-route-CategorieId="@cat.Id"
                       class="btn rounded-pill px-4 @(Model.CategorieId == cat.Id ? "btn-dark" : "btn-outline-dark")">
                        @cat.Nom
                    </a>
                }
            }
            else
            {
                <p>Aucun produit trouvé pour le moment.</p>
            }
        </div>
    </div>

    @if (Model.Produits.Count == 0)
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-search display-4"></i>
            <p class="mt-3">Aucun livre trouvé dans ce rayon.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-2 row-cols-md-4 row-cols-lg-5 g-4">
            @foreach (var item in Model.Produits)
            {
                <div class="col">
                    <div class="book-card h-100">
                        <div class="book-cover-container">
                            <a asp-page="./Details" asp-route-id="@item.Id">
                                <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://placehold.co/150x220?text=Livre" : item.ImageUrl)"
                                     class="book-cover" alt="@item.Nom">
                            </a>

                            <form method="post" asp-page-handler="AddToCart" asp-route-id="@item.Id">
                                <button type="submit" class="quick-add-btn" title="Ajouter au panier">
                                    <i class="bi bi-cart-plus-fill"></i>
                                </button>
                            </form>
                        </div>

                        <div class="mt-2">
                            <div class="text-warning small mb-1">
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-half"></i>
                            </div>

                            <h5 class="book-title">
                                <a asp-page="./Details" asp-route-id="@item.Id" class="text-decoration-none text-dark">
                                    @item.Nom
                                </a>
                            </h5>

                            <p class="book-author text-truncate">@item.Description</p>

                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <span class="book-price">@item.Prix.ToString("C")</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>